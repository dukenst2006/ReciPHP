@import "colors.styl"

@import "../../../node_modules/vuetify/src/stylus/main"

html {
  overflow-y: hidden;
}

#app {
  #footer {
    position: absolute;
    bottom: 1px;
    width: 100%;
  }

  .content .inner {
    padding: 1rem 3rem 0;
    width: 100%;
    height: 100%;
  }

  nav > .row {
    width: 100%;
  }

  .inner {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  main {
    position: relative;
    height: calc(100vh - 64px - 56px);
    overflow-y: scroll;
  }

  #new-recipe {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
  }

  .stepper-step {
    width: calc(100% - 26px);
    margin: auto;
    margin-top: 15px;
    margin-bottom: 5px;
  }

  .stepper-button {
    margin-top: 20px;
  }
}

.fade-enter-active, .fade-leave-active {
  transition: opacity .3s
}

.fade-enter-active {
  transition-delay: .2s;
}

.fade-enter, .fade-leave-to {
  opacity: 0
}